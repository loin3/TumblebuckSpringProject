{{>layout/header}}

<div class="container">
    {{#project}}
    <nav class="navbar navbar-expand-lg navbar-light">
        <a class="navbar-brand" href="/main">벅블텀</a>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/all">모든 프로젝트 보기</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/project/post">프로젝트 등록</a>
                </li>
                <li class="nav-item">
                    {{#name}}
                        Logged in as: <span id="user">{{name}}</span>
                        <a class="nav-link" href="/logout" role="button">Logout</a>
                    {{/name}}
                    {{^name}}
                        <a class="nav-link" href="/oauth2/authorization/google">Login</a>
                    {{/name}}
                </li>
            </ul>
        </div>
    </nav>

    <hr>

    <div class="row text-center">
        <div class="col-12">
            <h3>{{title}}</h3>
            <label>제작자 : {{email}}</label>
            <br>
            <label>태그 : {{tag}}</label>
        </div>
    </div>

    <div class="row">
        <div class="col-8">
            <img width=700 height=500 src="{{picture}}">
        </div>
        <div class="col-4">
            <div>
                <label><small>모인금액</small></label>
                <div>
                    <label style="font-size: 2em;">{{currentFunding}}</label>원
                </div>
                <label>{{percentage}}%</label>
            </div>
            <br>
            <div>
                <label><small>마감 시간</small></label>
                <div>
                    <label style="font-size: 2em;">{{endDate}}</label>
                </div>
            </div>
            <br>
            <div>
                <label><small>후원자</small></label>
                <div>
                    <label style="font-size: 2em;">{{#donate}}{{donate}}{{/donate}}</label>명
                </div>
            </div>
            <div>
                <button class="btn btn-outline-primary">후원하기</button>
            </div>

        </div>
    </div>

    <div class="row" style="padding-left: 30px; padding-right: 30px;">
        {{content}}
    </div>

    {{/project}}
</div>

{{>layout/footer}}