{{>layout/header}}

    <div class="row text-center">
        <div class="col-12">
            <h5>프로젝트 보여주기</h5>
        </div>

        <div class="col-1 offset-11 dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                전체
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="/all/?tag=all" onclick="setDropdownCategory(this)">ALL</a>
                <a class="dropdown-item" href="/all/?tag=GAME" onclick="setDropdownCategory(this)">GAME</a>
                <a class="dropdown-item" href="/all/?tag=CONCERT" onclick="setDropdownCategory(this)">CONCERT</a>
                <a class="dropdown-item" href="/all/?tag=CARTOON" onclick="setDropdownCategory(this)">CARTOON</a>
                <a class="dropdown-item" href="/all/?tag=DESIGN" onclick="setDropdownCategory(this)">DESIGN</a>
                <a class="dropdown-item" href="/all/?tag=CRAFT" onclick="setDropdownCategory(this)">CRAFT</a>
                <a class="dropdown-item" href="/all/?tag=ETC" onclick="setDropdownCategory(this)">ETC</a>
            </div>
        </div>

        {{#project}}
            <div class="col-3">
                <div class="card h-200">
                    <a href="#"><img class="card-img-top" src="{{#picture}}{{picture}}{{/picture}}{{^picture}}http://placehold.it/700x400{{/picture}}" alt="" height="150"></a>
                    <div class="card-body">
                        <h4 class="card-title">
                            <a href="/project/detail/?id={{id}}">{{title}}</a>
                        </h4>
                        <h5>current funding : {{currentFunding}}</h5>
                        <h5>percentage : {{percentage}}</h5>
                    </div>
                </div>
            </div>
        {{/project}}
        {{^project}}
            <div class="col-12">
                <h4>프로젝트가 없습니다</h4>
            </div>
        {{/project}}

    </div>

</div>

<script>
        function setDropdownCategory(obj){
          var text = obj.innerText;
          $('#dropdownMenuButton').text(text);
        }
</script>

{{>layout/footer}}